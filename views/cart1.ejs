<htmL>
    <head>
        <title>Cart</title>
			<meta charset="utf-8">
			<meta name="viewport" content="width=device-width" initial-scale=1>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    </head>
    <style>
        body{
            align-content: center;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            padding-left: 250px;
        }
    </style>
    <body style="background-color:rgb(57, 54, 48) ;background-origin: padding-box;border-radius: 2rem;border-style: dashed;border-width: 3px;border-color: aliceblue;">
        <div class="container" style="padding-top: 30px;padding-left: 10px;padding-right: 10px;padding-bottom: 30px;">
        <div class="card" style="width:600px;background-color:rgb(223, 202, 224);height:600px;padding-left: 30px;padding-top: 10px;padding-bottom: 10px;border-radius: 2rem;border-style: groove;">
            <table class="table" style="width: 550px; height: 200px;padding-left: 50px;padding-right: 30px;table-layout:initial;text-decoration: solid;padding-top: 25px ;">
                <tr style="background-color: rgb(190, 197, 241)">
                    <th>Items </th>
                    <th>Cost </th>
                </tr>
                <% for(var i=0;i<booksData.length;i++){ %>
                        <tr style="background-color: rgb(235, 202, 208)">
                        <td><%= booksData[i] %></td>
                        <td><%= costs[i] %></td>
                    </tr>
                <% } %>
                <tr style="background-color: rgb(236, 228, 196);">
                    <th>Total Cost</th>
                    <th><%= amount %></th>
                </tr>
            </table>
            <p style="color: rgb(34, 44, 34); padding-left: 110px;font-size: medium;font-style: italic;font-weight: bold;"><i class="bi bi-check-circle-fill"></i> Your order is eligible for FREE Delivery</p>
            <button type="submit" style="width:35%;height:30px;font-weight: bold;margin-left: 170px;color: rgb(121, 74, 74);" class="btn btn-warning" >Proceed to Buy <i class="bi bi-cart4"></i></button>
            <br><br>
            <div class="row" style="padding-left: 210px;font-style: oblique;font-weight: bold;">
                <div class="col-lg-2"><i class="bi bi-truck " style="font-size: 3rem;"></i><br><span>free delivery</span></div>
                <div class="col-lg-2"><i class="bi bi-file-lock2 " style="font-size: 3rem;"></i><br><span>secure Payment</span></div>
                <div class="col-lg-2"><i class="bi bi-geo-alt-fill" style="font-size: 3rem;"></i><br><span>Trace Location</span></div>
            </div><br>
            <b style="padding-left: 120px; color: rgb(38, 38, 44);font-weight: bold; font-style: italic;font-size: large;">Happy shopping <i class="bi bi-emoji-smile"></i> !! shop again..,,</b>
        </div>
        </div>
    </body>
</htmL>